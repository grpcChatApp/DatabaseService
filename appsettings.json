{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=gChatAppDb;Username=sa;Password={DB_PASSWORD};"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Configurations": {
    "KafkaBootstrapServers": "localhost:9092"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Producer": {
      "Acks": "all"
    }
  },

  "Kestrel": {
    "Endpoints": {
      "Grpc": {
        "Url": "http://localhost:5001",
        "Protocols": "Http2"
      }
    }
  }
}
